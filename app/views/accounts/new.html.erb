<div class="row">
   <div class="col-lg-12">
      <div class="box">
         <div class="box-header">
            <h2>
               New Account Information
            </h2>
         </div>
         <div class="box-body">
            <%= form_for @account, html:{class: 'form-horizontal'} do |f| %>
               <% if @account.errors.any? %>
                 <div class="alert alert-error alert-block alert-fixed">
                   <h4>
                     <%= "#{pluralize(@account.errors.count, "error")} Prohibited this account from being saved:" %>
                     <%= @account.errors.full_messages.map{ |msg| content_tag(:li, msg) }.join %>
                   </h4>
                 </div>
               <% end %>
               <div class="form-goup">
                 <%= f.label :name, class: "control-label col-lg-2" %>
                 <div class="col-lg-10">
                   <%= f.text_field :name, placeholder: "Enter your Account\'s Name", class: 'form-control' %>
                 </div>
               </div>
               <div class="form-group">
                 <div class="col-lg-offset-2 col-lg-10">
                   <%= f.submit "Save", class: "btn btn-primary" %>
                 </div>
               </div>
            <% end %>
         </div>
      </div>
   </div>
</div>
